<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Last Updated</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% budgets.each do |budget| %>
            <tr>
                <td><%= budget.name %></td>
                <td><%= budget.updated_at.localtime %></td>
                <td><%= link_to 'Show', budget %></td>
                <td><%= link_to 'Edit', [:edit, budget] %></td>
                <td><%= link_to 'Destroy', budget,
                                 method: :delete,
                                 data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
    </tbody>
</table>
