<% @page_links = [] unless @page_links %>

<!DOCTYPE html>
<html>
  <head>
    <title>InteractiveLedger</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
      <nav>
          <div class="left">
              <%= render '/layouts/page_links' %>
          </div>

          <div class="right">
              <%= link_to 'Home', root_path %>
          </div>

          <br>
          <h1><%= @page_heading %></h1>
      </nav>

      <div id="main">
          <%= yield %>
      </div>

      <footer>
          <div class="left">
              <%= render '/layouts/page_links' %>
          </div>
          <div class="right">
              <%= link_to 'Home', root_path %>
          </div>
      </footer>
  </body>
</html>
