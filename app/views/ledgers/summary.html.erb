<div class="ledger-summary">

    <div>
        <table class="total-expenses">
            <tr><th colspan="2">Total Expenses</th></tr>
            <tr>
                <th>Category:</th>
                <th>Amount:</th>
            </tr>

            <% CategorySummary.sort_summaries_by(@overall_totals[:expense_summaries], :sum).each do |key, summary| %>
                <tr>
                    <td><%= key %></td>
                    <td><%= display_value(summary.sum) %></td>
                </tr>
            <% end %>

            <tr class="totals-row">
                <td>Overall Total:</td>
                <td><%= display_value(@overall_totals[:total_expenses]) %></td>
            </tr>
        </table>
    </div>

    <div>
        <table class="total-deposits">
            <tr><th colspan="2">Total Deposits</th></tr>
            <tr>
                <th>Source:</th>
                <th>Amount:</th>
            </tr>

            <% CategorySummary.sort_summaries_by(@overall_totals[:deposit_summaries], :sum).each do |key, summary| %>
                <tr>
                    <td><%= key %></td>
                    <td><%= display_value(summary.sum) %></td>
                </tr>
            <% end %>

            <tr class="totals-row">
                <td>Overall Total:</td>
                <td><%= display_value(@overall_totals[:total_deposits]) %></td>
            </tr>
        </table>
    </div>


    <div>
        <table class="average-expenses">
            <tr><th colspan="3">Average Expenses (<%= @totals.length %> Weeks)</th></tr>
            <tr>
                <th>Source:</th>
                <th>Average:</th>
                <th>Average per Week:</th>
            </tr>

            <% CategorySummary.sort_summaries_by(@overall_totals[:expense_summaries], :average).each do |key, summary| %>
                <tr>
                    <td><%= "#{key} (#{summary.transactions.length})" %></td>
                    <td><%= number_with_precision(summary.average, delimiter: ',', precision: 2) %></td>
                    <td><%= number_with_precision(summary.average_per_week, delimiter: ',', precision: 2) %></td>
                </tr>
            <% end %>

            <tr class="totals-row">
                <td colspan="2">Overall Average per Week:</td>
                <td><%= display_value(@overall_totals[:weekly_average]) %></td>
            </tr>
        </table>
    </div>


    <div>
        <table>
            <tr><th colspan="3">Average Deposits (<%= @totals.length %> Weeks)</th></tr>
            <tr>
                <th>Source:</th>
                <th>Average:</th>
                <th>Average per Week:</th>
            </tr>

            <% CategorySummary.sort_summaries_by(@overall_totals[:deposit_summaries], :average).each do |key, summary| %>
                <tr>
                    <td><%= "#{key} (#{summary.transactions.length})" %></td>
                    <td><%= number_with_precision(summary.average, delimiter: ',', precision: 2) %></td>
                    <td><%= number_with_precision(summary.average_per_week, delimiter: ',', precision: 2) %></td>
                </tr>
            <% end %>

            <tr class="totals-row">
                <td colspan="2">Overall Average per Week:</td>
                <td><%= number_with_precision(@overall_totals[:week_averaged_deposits], delimiter: ',', precision: 2) %></td>
            </tr>
        </table>
    </div>

</div>
