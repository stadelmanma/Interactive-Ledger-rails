<%= content_tag :tr, id: "row-#{transaction_counter}",
                     class: 'transaction',
                     data: transaction.attributes do -%>

    <%= render 'transactions/data', transaction: transaction,
                                    columns: column_names,
                                    transaction_counter: transaction_counter %>

    <% if week_totals[transaction_counter] %>
        <%= render 'transactions/totals',  week_total: week_totals[transaction_counter],
                                           transaction_counter: transaction_counter %>
    <% end %>
<% end %>
