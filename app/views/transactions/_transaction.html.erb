<%= content_tag :tr, id: "row-#{transaction_counter}", data: transaction.attributes do -%>

    <%= render 'transactions/data', transaction: transaction, columns: @column_names, transaction_counter: transaction_counter %>

    <% if @totals[transaction_counter] %>
        <%= render 'transactions/totals', totals: @totals, transaction_counter: transaction_counter %>
    <% end %>
<% end %>
