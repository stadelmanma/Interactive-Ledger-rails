<%= form_tag edit_category_initializers_path, :method => :post do %>

    <table id="category-initializers-container">
        <tr>
            <th>Pattern</th>
            <th>Category</th>
            <th>Subcategory</th>
            <th>Priority</th>
            <th></th>
        </tr>
        <% @initializers.each do |initializer|  %>
            <%= render 'form', initializer: initializer %>
        <% end %>
    </table>

    <a id="add-category-initializer" style="float: right;">Add Initializer</a>

    <div class="actions">
        <%= submit_tag "Submit" %>
    </div>
<% end %>
