<h1>Listing Uploads For Ledger <%= @ledger.name %></h1>
<span><%= link_to 'Back to Ledger', @ledger %></span>

<table>
  <tr>
    <th>Data Source</th>
    <th>Upload Date</th>
    <th colSpan="2"></th>
  </tr>

  <% @uploads.each do |upload| %>
    <tr>
      <td><%= upload.data_source %></td>
      <td><%= upload.created_at.localtime %></td>
      <td><%= link_to 'Show', [@ledger, upload] %></td>
      <td><%= link_to 'Edit', [:edit, @ledger, upload] %></td>
    </tr>
  <% end %>
</table>
