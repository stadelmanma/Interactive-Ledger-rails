<span style="width: 10em">
    <strong>Date Uploaded:</strong>
    <%= @upload.created_at.localtime%>
</span>
<span style="width: 10em">
    <strong>Last Updated:</strong>
    <%= @upload.updated_at.localtime%>
</span>

<br>
<br>

<table id="ledger">
  <tr>
    <% @column_names.each do |col| %>
      <th>
        <%= col.titlecase() %>
      </th>
    <% end %>
  </tr>

  <%= render partial: 'transactions/transaction',
             collection: @upload.transactions,
             locals: { column_names: @column_names, week_totals: {} } %>

</table>

